
@using TravelBuddy.HelperModels
@model UserDashboard



<div class="tripid" data-trip=></div>
<div class="jumbotron">
  <h2 class="display-4">Welcome @Model.UserName to the Trip Planner!</h2>
  <p class="lead">This is a simple app that allows user to add activities (Trips ,Flights ,etc) and track them.</p>
  <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#collapseExample">Get Started</button>
</div>
<div id="collapseExample" class="collapse addTrip">


  <form action="/createtrip" method="post" class="createTrip">
    <label asp-for="TripName">Trip Name</label>
    <input asp-for="TripName">
    <span asp-validation-for="TripName"></span>
    <label asp-for="StartDate" >Start Date</label>
    <input type="datetime" asp-for="StartDate" type="date">
    <label asp-for="EndDate">End Date</label>
    <input type="datetime" asp-for="EndDate" type="date">
    <input asp-for="UserId" type="hidden" value="@Model.UserId">
    <input type="submit" Value="Add Trip" class="submit-trip btn btn-success" >
  </form>
</div>

<span class="addFlightForm">Add Flight</span>
<div class="addFlight"></div>
