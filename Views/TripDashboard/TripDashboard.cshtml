@using TravelBuddy.HelperModels
@model TripDashboard

<h1>Here is your upcoming trip</h1>

<table class="table">
  <thead>
    <tr>
      <th>Day of the Week</th>
      <th>Date</th>
      <th>City/Cities</th>
      <th>Weather</th>
      <th>Flights</th>
      <th>Road Trips</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in @Model.DaysInTrip)
    {
      <tr>
        <td>@item.DayOfTheWeek</td>
        <td>@item.TheDay</td>
      </tr>
    }
    
  </tbody>
</table>