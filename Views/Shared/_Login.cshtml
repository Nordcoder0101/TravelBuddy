@using TravelBuddy.Models
@model LoginUser
<form asp-action="LoginUser" asp-controller="LoginReg" method="post" class="form-horizontal">
  <h3 class="LoginHeader">Login Here!</h3>
    <div class="form-group">
        <label asp-for="LoginEmail"></label>
          <input asp-for="LoginEmail" class="form-control col-md-6" aria-describedby="emailHelp">
          <span asp-validation-for="LoginEmail" class="alert-danger" role="alert"></span>
    </div>
    <div class="form-group">
        <label asp-for="LoginPassword"></label>
          <input asp-for="LoginPassword" class="form-control col-md-6" aria-describedby="emailHelp">
          <span asp-validation-for="LoginPassword" class="alert-danger" role="alert"></span>    
    </div>  
    <button type="submit" class="btn btn-success">Login</button>
</form>