@using TravelBuddy.Models
@model Activity
<form asp-action="/createactivity" class="createActivity" method="post">
  <h3>Add Activity</h3>   
  <div class="form-group">
    <label asp-for="Title"></label>
    <input asp-for="Title" class="form-control col-md-8">
    <span asp-validation-for="Title" class="alert-danger" role="alert"></span>
  </div>
  <div class="form-group">
    <label asp-for="Date"></label>
    <input asp-for="Date" class="form-control col-md-8">
    <span asp-validation-for="Date" class="alert-danger" role="alert"></span>
  </div>

  <div class="form-group">
    <label asp-for="Description"></label>
    <textarea asp-for="Description" class="form-control col-md-8"></textarea>
    <span asp-validation-for="Description" class="alert-danger" role="alert"></span>
  </div>
    <input type="hidden" asp-for="TripId" value="">
    <input type="submit" class="btn btn-success" value="Add Activity">
</form>
