@using TravelBuddy.Models
@model FlightValidation

<form action="/createflight"  class="createFlight" method="post">
  <h3>Add Flight</h3>  
  <div class="form-group">

    <label asp-for="Airline"></label>
    <input asp-for="Airline" class="form-control col-md-8">
    <span asp-validation-for="Airline" class="alert-danger" role="alert"></span>
  </div>

  <div class="form-group">
    <label asp-for="FlightNumber">Flight Number</label>
    <input asp-for="FlightNumber" class="form-control col-md-8">
    <span asp-validation-for="FlightNumber"></span>
  </div>

  <div class="form-group">
    <label asp-for="Departure"></label>
    <input asp-for="Departure" class="form-control col-md-8">
    <span asp-validation-for="Departure"></span>
  </div>

  <div class="form-group">
    <label asp-for="Arrival"></label>
    <input asp-for="Arrival" class="form-control col-md-8">
    <span asp-validation-for="Arrival"></span>
  </div>

  <div class="form-group"> 
    <label asp-for="DepartingCity">Departing City</label>
    <input asp-for="DepartingCity" class="form-control col-md-8">
    <span asp-validation-for="DepartingCity"></span>
  </div>

  <div class="form-group"> 
    <label asp-for="ArrivalCity">Arrival City</label>
    <input asp-for="ArrivalCity" class="form-control col-md-8">
    <span asp-validation-for="ArrivalCity"></span>
  </div>    
    <input type="hidden" asp-for="DayId" value="">

  <div class="form-group">  
    <label asp-for="DepartingState">Departing State</label>
    <input asp-for="DepartingState" class="form-control col-md-8">
    <span asp-validation-for="DepartingState"></span>

  </div>

  <div class="form-group">
    <label asp-for="ArrivalState">Arrival State</label>
    <input asp-for="ArrivalState" class="form-control col-md-8">
    <span asp-validation-for="ArrivalState"></span>
  </div>
  <input type="button" class="CreateFlight btn btn-success" value="Add Flight">
</form>